{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "paths": {
      "~/*": ["./src/*"]
    },
    "sourceMap": true,
    "target": "ES2020"
  },
  "include": ["src/**/*"]
}
